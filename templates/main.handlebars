<aside class="left">
  <div class="search">
    {{view SC.TextField type="search" placeholder="Search for symbol"}}
  </div>

  <div class="list-container">
    {{#if displayController.isSearching}}

    {{else}}
      {{#collection Docs.PackagesList contentBinding="Docs.packagesController" tagName="ul"}}
        {{content.name}}
      {{/collection}}
    {{/if}}
  </div>
</aside>

<section>
  {{#swap nowShowingBinding="Docs.displayController.nowShowing"}}
    {{#view name="index"}}
      INDEX
    {{/view}}
    {{#view name="class"}}
      CLASS
    {{/view}}
  {{/swap}}
</section>
